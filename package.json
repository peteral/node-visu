{
  "name": "node-visu",
  "version": "0.0.0",
  "private": true,
  "babel": {
    "presets": [
      "react",
      "es2015"
    ]
  },
  "scripts": {
    "start-server": "node ./bin/www",
    "test" : "jest",
    "build-debug-all": "npm run-script build-debug-frontend && npm run-script build-debug-pictures",
    "build-prd-all": "npm run-script build-prd-frontend && npm run-script build-prd-pictures",
    "build-libs": "copyfiles -f ./node_modules/react/dist/react.js ./node_modules/react-dom/dist/react-dom.js ./node_modules/alt/dist/alt.js ./node_modules/socket.io-client/socket.io.js ./public/javascripts",
    "build-debug-frontend": "webpack",
    "build-debug-pictures": "webpack --config webpack-pictures.config.js",
    "build-prd-frontend": "webpack --config webpack-prd.config.js",
    "build-prd-pictures": "webpack --config webpack-pictures-prd.config.js"
  },
  "dependencies": {
    "alt": "^0.18.4",
    "body-parser": "~1.13.2",
    "cookie-parser": "~1.3.5",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "flux": "^2.1.1",
    "jade": "~1.11.0",
    "lodash": "^4.12.0",
    "morgan": "~1.6.1",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-skylight": "^0.4.0",
    "serve-favicon": "~2.3.0",
    "socket.io": "^1.4.6",
    "socket.io-client": "^1.4.6"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-jest": "^12.0.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "jest-cli": "^12.0.2",
    "react-addons-test-utils": "^15.0.2",
    "webpack": "^1.13.0"
  },
  "jest" : {
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules/react/",
      "<rootDir>/node_modules/react-dom/",
      "<rootDir>/node_modules/react-addons-test-utils/"
    ]
  }
}
